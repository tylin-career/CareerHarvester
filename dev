#!/bin/bash
#
# CareerHarvester - One Command Start
# Usage: ./dev
#

PROJECT_ROOT="$(cd "$(dirname "$0")" && pwd)"

# Get WSL IP
IP=$(hostname -I | awk '{print $1}')

# Kill existing
pkill -f "python app.py" 2>/dev/null
pkill -f "vite" 2>/dev/null
sleep 1

# Start backend
cd "$PROJECT_ROOT/backend" && source .venv/bin/activate && python app.py &

# Start frontend  
cd "$PROJECT_ROOT/frontend" && npm run dev -- --host 0.0.0.0 &

sleep 3

echo ""
echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo "â•‘  CareerHarvester ðŸš€                      â•‘"
echo "â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£"
echo "â•‘  Frontend: http://$IP:3000    â•‘"
echo "â•‘  Backend:  http://$IP:5000    â•‘"
echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo ""
echo "åœ¨ Windows æ‰“é–‹: http://$IP:3000"
echo ""
echo "Ctrl+C åœæ­¢ä¼ºæœå™¨"

# Open browser in Windows
cmd.exe /c start "http://$IP:3000" 2>/dev/null || true

wait
